<%= render 'layouts/navbar' %>

<!--ログインフォーム-->
<!--container,wrapperは新規登録、編集ページと同じクラス-->
<div class="container">
  <div class="wrapper">

    <div class="login">
      <h2>ログイン</h2>
    </div>
    
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
      <div class="form">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>  
      
      <%= f.submit 'ログインする', class: 'form-login-btn' %>
    <% end %>
    
    <p class="form-indication">まだ登録されていない方は<%= link_to 'こちら', signup_path, class: 'signup-link' %>から登録をお願いします。</p>

  </div>
</div>
<%= render 'layouts/footer' %>
  
    
