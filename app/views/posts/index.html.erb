<%= render 'layouts/navbar' %>
<div  class="post-index-heading">
  <h2>投稿一覧</h2>
</div>

<%= form_with url: posts_path, method: :get, local: true, class: 'search-container' do |form| %>
  <div class="resarch">
    <%= form.text_field :search, class:'resarch-form', value: params[:search], :placeholder => "キーワードを入力" %>
    <%= form.submit '検索', name: nil, class:'resarch-btn' %>
  </div>
<% end %>

<!--投稿一覧を表示-->
<div class="all-post">
  <%= render 'posts', posts: @posts %>

  <!--ページネーション-->
  <div class="pagination">
    <%= paginate @posts %>
  </div>
</div>

<%= render 'layouts/footer' %>
