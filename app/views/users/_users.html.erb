<% if users.any? %>
 <ul class="user-index">
   <% users.each do |user| %>
    <li class="user">
      <% if user.image? %> 
        <p>
          <%= image_tag user.image.url %>
        </p>
      <% else %>
        <img src="/about/about2.png">
      <% end %>
      <div class="user-right">
        <div class="user-name">
          <%= link_to user.name, user_path(user) %>
        </div>
        <div class="user-introduce">
          <%= user.introduce_comment %>
        </div>
      </div>
    </li>
   <% end %>
 </ul>
 <%= paginate users %>
<% end %>